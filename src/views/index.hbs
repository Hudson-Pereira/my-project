<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Pedidos</title>
    <link rel="stylesheet" type="text/css" href="/style.css" /> <!-- media="screen" /> -->
</head>

<body>
    <div class="container">
        <h2>Sistema de Pedidos</h2>
        <div id="menu">
            <div class="menu-item" id="burguer">
                <div class="item-image"></div>
                <div class="menu-info">
                    Hambúrguer - R$15,00
                    <div class="menu-description">Pão, carne, queijo, alface e tomate</div>
                </div>
                <div class="menu-actions">
                    <button class="quantity-btn" onclick="removeItem('Hambúrguer', 15)">-</button>
                    <button onclick="addItem('Hambúrguer', 15)">+</button>
                </div>
            </div>
            <div class="menu-item" id="fries">
                <div class="item-image"></div>
                <div class="menu-info">
                    Batata Frita - R$8,00
                    <div class="menu-description">Batatas crocantes fritas na hora</div>
                </div>
                <div class="menu-actions">
                    <button class="quantity-btn" onclick="removeItem('Batata Frita', 8)">-</button>
                    <button onclick="addItem('Batata Frita', 8)">+</button>
                </div>
            </div>
            <div class="menu-item" id="soda">
                <div class="item-image"></div>
                <div class="menu-info">
                    Refrigerante - R$5,00
                    <div class="menu-description">Bebida gelada e refrescante</div>
                </div>
                <div class="menu-actions">
                    <button class="quantity-btn" onclick="removeItem('Refrigerante', 5)">-</button>
                    <button onclick="addItem('Refrigerante', 5)">+</button>
                </div>
            </div>
        </div>
        <div class="order">
            <h3>Pedido</h3>
            <ul id="order-list"></ul>
            <div class="total">Total: R$<span id="total">0.00</span></div>
        </div>
    </div>
    <script>
        let total = 0;
        let items = {};

        function addItem(item, price) {
            if (!items[item]) {
                items[item] = 0;
            }
            items[item]++;
            total += price;
            document.getElementById("total").innerText = total.toFixed(2);
        }

        function removeItem(item, price) {
            if (items[item] && items[item] > 0) {
                items[item]--;
                total -= price;
                document.getElementById("total").innerText = total.toFixed(2);
            }
        }
    </script>
</body>
</html>
